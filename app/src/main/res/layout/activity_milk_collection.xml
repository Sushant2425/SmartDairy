<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Auto Date -->
        <TextView
            android:id="@+id/tvDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2025-07-01"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Auto Session -->
        <TextView
            android:id="@+id/tvSession1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session: Morning"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Milk Code -->
        <EditText
            android:id="@+id/etMilkCode1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Milk Code"
            android:inputType="text"
            android:padding="10dp" />

        <!-- Auto Milk Type -->
        <TextView
            android:id="@+id/tvMilkType1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milk Type: "
            android:textSize="16sp"
            android:textColor="#00796B"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <!-- Milk Quantity (Liters + Milliliters as decimal) -->
        <EditText
            android:id="@+id/etMilkQuantity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Milk Quantity (Liters)"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <!-- Fat Sample Bottle Code -->
        <EditText
            android:id="@+id/etFatSampleCode1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fat Sample Bottle Code"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginTop="16dp" />

        <!-- Fat Value (Optional) -->
        <EditText
            android:id="@+id/etFatValue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Fat % (optional)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveMilkCollection1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ Save Collection"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="24dp"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
