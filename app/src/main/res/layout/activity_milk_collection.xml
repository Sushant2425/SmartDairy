<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Auto Date -->
        <TextView
            android:id="@+id/tvDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Auto Session -->
        <TextView
            android:id="@+id/tvSession1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Milk Code (Required) -->
        <EditText
            android:id="@+id/etMilkCode1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Milk Code *"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/edittext_border" />

        <!-- Farmer Name -->
        <EditText
            android:id="@+id/etFarmerName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Farmer Name (auto-filled or type to search)"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border" />

        <!-- Auto Milk Type -->
        <TextView
            android:id="@+id/tvMilkType1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milk Type: "
            android:textSize="16sp"
            android:textColor="#00796B"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <!-- Milk Quantity (Required) -->
        <EditText
            android:id="@+id/etMilkQuantity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Milk Quantity (Liters) *"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:background="@drawable/edittext_border" />

        <!-- Fat Sample Bottle Code (Optional) -->
        <EditText
            android:id="@+id/etFatSampleCode1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fat Sample Bottle Code (optional)"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_border" />

        <!-- Fat Value (Optional) -->
        <EditText
            android:id="@+id/etFatValue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Fat % (optional)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_border" />

        <!-- Required Fields Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Required fields"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvFatRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="à¤«à¥…à¤Ÿ à¤¦à¤° (à¤ªà¥à¤°à¤¤à¤¿ à¤²à¤¿à¤Ÿà¤°): "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="à¤à¤•à¥‚à¤£ à¤°à¤•à¥à¤•à¤®: "
            android:textSize="16sp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveMilkCollection1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ Save Collection"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="24dp"
            android:padding="14dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

