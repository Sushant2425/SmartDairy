<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Farmer Name -->
        <EditText
            android:id="@+id/etFarmerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Farmer Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <!-- Mobile Number -->
        <EditText
            android:id="@+id/etMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:maxLength="10"
            android:layout_marginBottom="12dp" />

        <!-- Address -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:layout_marginBottom="20dp" />

        <!-- Cow Milk Switch -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you have Cow?"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <Switch
            android:id="@+id/switchCow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <!-- Cow Milk Code (hidden initially) -->
        <EditText
            android:id="@+id/etCowMilkCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cow Milk Code"
            android:inputType="text"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp" />

        <!-- Buffalo Milk Switch -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you have Buffalo?"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <Switch
            android:id="@+id/switchBuffalo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <!-- Buffalo Milk Code (hidden initially) -->
        <EditText
            android:id="@+id/etBuffaloMilkCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buffalo Milk Code"
            android:inputType="text"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnAddFarmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Farmer"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
