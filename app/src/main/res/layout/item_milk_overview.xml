<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Add swipe indicator at the top -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />

        <!-- Date and Session in horizontal layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="27 July 2025"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:gravity="start" />

            <!-- Session Filter Spinner -->
            <Spinner
                android:id="@+id/spinnerSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="4dp"
                android:minWidth="100dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>


        <!-- Milk Data Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ„ Cow:"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvCowMilk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56 L"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸƒ Buffalo:"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvBuffaloMilk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42 L"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF9800" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“Š Total:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvTotalMilk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98 L"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />

        </LinearLayout>

        <!-- Add swipe hint at bottom -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Swipe for other dates â†’"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"
            android:layout_gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
